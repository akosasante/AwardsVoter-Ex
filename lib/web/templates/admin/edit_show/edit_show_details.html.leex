<%= f = form_for @show_changeset, "#", phx_submit: :save_show_details, class: "flex flex-col space-y-9 mb-9" %>
<label>
  Show Name: <%= text_input f, :name, class: "w-full" %>
</label>

<label>
  Description: <%= textarea f, :description, class: "w-full" %>
</label>

<label>
  Show Airdate: <%= datetime_local_input f, :air_datetime %>
</label>

<%= submit "Update Show", class: "bg-yellow-500 rounded w-64 p-2 mr-2" %>
</form>
