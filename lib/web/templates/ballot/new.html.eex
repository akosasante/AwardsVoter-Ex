<h1>New ballot for <%= @show_name %></h1>
<%= form_for @changeset, Routes.ballot_path(@conn, :create, @show_name), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  
  <%= label f, :username %>
  <%= text_input f, :username %>
  <%= error_tag f, :voter %>
  
  <div>
    <%= submit "Save" %>
  </div>
<% end %>